@model Store.Models.UserAccountViewModel
@{
    ViewData["Title"] = "Details";
}

<div class="row justify-content-center">
    <div class="col-8 ">
        <div class="card shadow">
            <div class="card-header">
                My profile
            </div>
            <div class="card-body">
                <div class="row justify-content-center">
                    <dv class="col-3" >
                        <img class="img-fluid rounded-2" src="@Url.Action("Photo", "Account", new {id = Model.User.Id })" />
                        
                    </dv>
                </div>
                <fieldset disabled>
                    <div class="mb-3">
                        <label asp-for="User.Name" class="form-label"></label>
                        <input asp-for="User.Name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="User.LastName" class="form-label"></label>
                        <input asp-for="User.LastName" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label asp-for="Account.Email" class="form-label"></label>
                        <input asp-for="Account.Email" class="form-control" />
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="User.Address" class="form-label"></label>
                                <input asp-for="User.Address" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="User.City" class="form-label"></label>
                                <input asp-for="User.City" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="User.Phone" class="form-label"></label>
                                <input asp-for="User.Phone" class="form-control" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="User.PostalCode" class="form-label"></label>
                                <input asp-for="User.PostalCode" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label asp-for="User.Country" class="form-label"></label>
                                <input asp-for="User.Country" class="form-control" />
                               
                            </div>
                        </div>
                    </div>

                </fieldset>
                <div class="row">
                    <div class="col">
                <a class="btn btn-outline-dark w-100" asp-action="ChangePassword">Change Password</a>

                    </div>
                    <div class="col">
                        <a class="btn btn-outline-dark w-100" asp-action="Edit">Edit Profile</a>
                    </div>

                </div>
            </div>
        </div>

    </div>
</div>